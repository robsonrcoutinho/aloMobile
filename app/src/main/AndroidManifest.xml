<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alo.alomobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.alo.alomobile.activitys.MensagemActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity android:name="com.alo.alomobile.activitys.PedidoActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity android:name="com.alo.alomobile.activitys.ProdutosActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity android:name="com.alo.alomobile.activitys.PromocaoActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity android:name="com.alo.alomobile.activitys.MainActivity"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>